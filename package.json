{
  "name": "resio",
  "version": "1.0.0",
  "description": "Connect with your audience.",
  "main": "./server/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "nodemon server/server.js",
    "lint": "eslint",
    "full-lint": "eslint **.js & eslint server/**.js & eslint src/**.jsx & eslint src/**/**.jsx",
    "test": "export NODE_ENV=test && mocha --timeout 3000 test/",
    "prebuild": "npm run test",
    "build": "browserify -t [babelify] src/index.jsx -o client/build/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-gingerbread-man/resio.git"
  },
  "author": "Resio Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/the-gingerbread-man/resio/issues"
  },
  "homepage": "https://github.com/the-gingerbread-man/resio#readme",
  "babel": {
    "presets": ["es2015","react"]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "__dirname": true
    }
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^4.3.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "react-addons-test-utils": "^15.0.1",
    "sinon": "^1.17.3",
    "supertest": "^1.2.0",
    "watchify": "^3.7.0",
    "zombie": "^4.2.1"
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "express": "^4.13.4",
    "history": "^2.0.1",
    "react": "^15.0.1",
    "react-d3": "^0.4.0",
    "react-dom": "^15.0.1",
    "react-engine": "^3.2.1",
    "react-fontawesome": "^0.3.3",
    "react-router": "^2.2.2",
    "socket.io": "^1.4.5"
  }
}
